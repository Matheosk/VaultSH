#!/bin/sh

# Verify if it isn't running as root
if [[ $(whoami) == "root" ]]; then
  echo "âŒ Error: Run this script as root is not allowed." >&2
  exit 1
fi

# Create the destination folder
mkdir -p ~/.vaultsh/

#####################
# VAR AND FUNCTIONS #
#####################

CURRENT_DIR=$(pwd)
TIMESTAMP=$(date +"%Y-%m-%d_%H:%M")

# Create a unique ID for any directory
DIR_ID=$(echo "$CURRENT_DIR" | shasum | cut -c1-30)

load_backup () {
  if [[ -z $1 ]]; then
    echo "âŒ You need to provide a backup name."
    echo "ğŸ“ Available backups:"
    ls -1 "$HOME/.vaultsh/$DIR_ID/"
    exit 1
  fi

  SELECTED_BCKUP="$HOME/.vaultsh/$DIR_ID/$1"

  if [[ ! -f $SELECTED_BCKUP ]]; then
    echo "âŒ Invalid backup name: '$1'"
    echo "ğŸ“ Available backups:"
    ls -1 "$HOME/.vaultsh/$DIR_ID/"
    exit 1
  fi
  
  echo "ğŸ” Restoring backup: $1"
  rm -rf ./*
  tar -xf $SELECTED_BCKUP
  echo "âœ… Restore completed"
  
  exit 1
}

print_help () {
  echo "VaultSH - Backup Manager Written in Bash
========================================
load <file>  Load the selected backup
list         List available backups for current directory
help         Print this message
  "
  exit 1
}


# Root protection, lol
if [[ $CURRENT_DIR == "/" ]]; then
  echo "âŒ Error: Backing up the root directory (/) is not allowed." >&2
  echo "â„¹ï¸  Please run this script inside a specific directory you want to back up." >&2
  exit 1
fi

case "$1" in
  load)
    load_backup "$2"
  ;;
  list)
    echo "ğŸ“ Available backups:"
    ls -1 "$HOME/.vaultsh/$DIR_ID/"
    exit 1
  ;;
  help) 
    print_help
  ;;
esac

echo "ğŸ“¦ Creating backup..."
mkdir -p "$HOME/.vaultsh/$DIR_ID/"
tar -czf "$HOME/.vaultsh/$DIR_ID/$TIMESTAMP.tar.gz" .
echo "âœ… Backup saved as: $TIMESTAMP.tar.gz"
